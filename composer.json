{
  "name": "netodev/php-lambda-router",
  "description": "Route requests to controller actions using the AWS Lambda handler",
  "type": "library",
  "authors": [
    {
      "name": "Ben Plunkett",
      "email": "ben.plunkett@neto.com.au"
    }
  ],
  "autoload": {
    "psr-4": {
      "Neto\\Lambda\\": "src/Neto/Lambda"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Neto\\Lambda\\Test\\": "tests"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.3",
    "psr/http-message": "1.0.*",
    "psr/http-server-handler": "1.0.*",
    "psr/http-server-middleware": "1.0.*",
    "psr/container": "^1.0",
    "psr/log": "^1.1",
    "netolabs/simple-container": "0.2.3",
    "php-di/invoker": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "7.5.*",
    "phake/phake": "3.1.*",
    "squizlabs/php_codesniffer": "2.*"
  },
  "scripts": {
    "test": [
      "phpunit --testdox"
    ],
    "lint": [
      "phpcs --standard=PSR2 src"
    ]
  }
}
